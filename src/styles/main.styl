back(size)
  background-color #f1f1f1
  box-shadow 4px 5px 10px rgba(0, 0, 0, 0.4)
  padding: size + "%"
  margin 0 0 1% 0

nav
  back(0)
  margin-top 12px
  display grid
  grid-template-columns repeat(auto-fit, minmax(200px, 1fr))

  & a
    display block
    text-align center
    padding 1%
    color colorText
    text-decoration: none
    color #000000
        
    &:hover
    &.active
      background-color #f87777
      color #f8f8f8     
      

footer
    background-color darkgrey
    color white
    text-align center
    padding 8px 0
    margin-top 20px


body
  width 90%
  margin 0 auto



.gallery
  display grid
  grid-template-columns 1fr 1fr
  gap 10px
  width 100%
  margin-bottom 20px

.gallery__image
  width 100%
  height 100%
  img
    width 100%
    height 100%
    object-fit cover
    border-radius 8px
    transition 0.2s
  img:hover
    transform scale(1.02)

.gallery__image_top-left
  grid-column 1
  grid-row 1

.gallery__image_large-right
  grid-column 2
  grid-row 1 / span 2

.gallery__image_bottom-left
  grid-column 1
  grid-row 2
  display grid
  grid-template-columns 1fr 1fr
  gap 10px


.content
  width: 100%
  display: grid
  grid-template-columns: 1fr 3fr 1fr
  gap: 20px
  align-items: start


.content__sidebar
  display: flex
  flex-direction: column
  gap: 15px

.content__sidebar-card
  background: lightgray
  border-radius: 8px
  padding: 15px
  text-align: center

  img
    width: 100%
    height: 120px
    object-fit: cover
    border-radius: 6px
    margin-bottom: 10px

  h3
    margin-bottom: 10px

.content__sidebar-card-description
  line-height: 1.4
  text-align: justify
  height: 4.2em
  overflow: hidden


.content__articles-grid
  display: grid
  grid-template-columns: 1fr 1fr
  gap: 20px

.content__article-card
  border: 2px solid red
  border-radius: 10px
  padding: 20px

  img
    width: 100%
    height: 150px
    object-fit: cover
    border-radius: 8px
    margin-bottom: 15px

  &.content__article-card_featured
    grid-column: 1 / -1
    display: grid
    grid-template-columns: 2fr 1fr
    gap: 20px
    align-items: start

    img
      height: 200px
      margin-bottom: 0

.content__article-title
  text-align: center
  font-weight: bold
  margin-bottom: 15px

.content__article-card p
  text-align: justify
  margin-bottom: 15px

.content__article-btn
  padding: 10px 20px
  border-radius: 5px
  display: block
  margin: 0 auto


.content__image img
  width 30%


section
    display grid
    grid-template-columns 1fr 1fr

.car-image
  img
    display block
    margin 0 auto
    width 50%


@media (max-width: 800px)

  nav
    grid-template-columns repeat(2, 1fr)

    & a
      padding 2%

  body
    width 100%

  .gallery
    grid-template-columns 1fr
    grid-template-rows auto

  .gallery__image_top-left,
  .gallery__image_large-right,
  .gallery__image_bottom-left
    grid-column auto
    grid-row auto

  .gallery__image_bottom-left
    display grid
    grid-template-columns 1fr
    gap 10px

  .content
    grid-template-columns 1fr
    gap 15px

  .content__sidebar
    flex-direction column
    gap 10px

  .content__articles-grid
    grid-template-columns 1fr

  .content__article-card.featured
    grid-template-columns 1fr

    img
      order -1
      height 200px


  section
    grid-template-columns 1fr
