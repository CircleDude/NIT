gap = 20px

back(size)
  background-color #f1f1f1
  box-shadow 4px 5px 10px rgba(0, 0, 0, 0.4)
  padding size + "%"
  margin 0 0 1% 0

dispGrid(col1, col2)
  display grid
  grid-template-columns (col1)fr (col2)fr

nav
  back(0)
  margin-top 12px
  display grid
  grid-template-columns repeat(auto-fit, minmax(200px, 1fr))

  & a
    display block
    text-align center
    padding 1%
    color colorText
    text-decoration none
    color #000000
        
    &:hover
    &.active
      background-color #f87777
      color #f8f8f8     
      

footer
    background-color darkgrey
    color white
    text-align center
    padding 8px 0
    margin-top gap


body
  width 90%
  margin 0 auto



.gallery
  dispGrid(1, 1)
  gap 10px
  width 100%
  margin-bottom gap

  &__image
    width 100%
    height @width
    img
      width 100%
      height @width
      object-fit cover
      border-radius 8px
      transition 0.2s
    img:hover
      transform scale(1.02)

    &_top-left
      grid-column 1
      grid-row 1

    &_large-right
      grid-column 2
      grid-row 1 / span 2

    &_bottom-left
      grid-column 1
      grid-row 2
      display grid
      grid-template-columns 1fr 1fr
      gap 10px


.content
  width 100%
  display grid
  grid-template-columns 1fr 3fr 1fr
  gap gap
  align-items start

  &__sidebar
    display flex
    flex-direction column
    gap 15px

  &__sidebar-card
    background lightgray
    border-radius 8px
    padding 15px
    text-align center

    img
      width 100%
      height 120px
      object-fit cover
      border-radius 6px
      margin-bottom 10px

    h3
      margin-bottom 10px

  &__sidebar-card-description
    line-height 1.4
    text-align justify
    height 4.2em
    overflow hidden


  &__articles-grid
    dispGrid(1, 1)
    gap gap

  &__article-card
    border 2px solid red
    border-radius 10px
    padding gap

    img
      width 100%
      height 150px
      object-fit cover
      border-radius 8px
      margin-bottom 15px

    &.content__article-card_featured
      grid-column 1 / -1
      dispGrid(2, 1)
      gap gap
      align-items start

      img
        height 200px
        margin-bottom 0

  &__article-title
    text-align center
    font-weight bold
    margin-bottom 15px

  &__article-card p
    text-align justify
    margin-bottom 15px

  &__article-btn
    padding 10px gap
    border-radius 5px
    display block
    margin 0 auto


  &__image img
    width 30%


section
    dispGrid(1, 1)

.car-image
  img
    display block
    margin 0 auto
    width 50%


@media (max-width 800px)

  nav
    grid-template-columns repeat(2, 1fr)

    & a
      padding 2%

  body
    width 100%

  .gallery
    grid-template-columns 1fr
    grid-template-rows auto

  .gallery__image_top-left,
  .gallery__image_large-right,
  .gallery__image_bottom-left
    grid-column auto
    grid-row auto

  .gallery__image_bottom-left
    display grid
    grid-template-columns 1fr
    gap 10px

  .content
    grid-template-columns 1fr
    gap 15px

  .content__sidebar
    flex-direction column
    gap 10px

  .content__articles-grid
    grid-template-columns 1fr

  .content__article-card.featured
    grid-template-columns 1fr

    img
      order -1
      height 200px

  .content__article-card.content__article-card_featured
    grid-template-columns 1fr


  section
    grid-template-columns 1fr
